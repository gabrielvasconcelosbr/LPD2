import javax.swing.JOptionPane;

public class Main {

    public static void main(String[] args) {
        int num = 0, cont = 0, men_valor = 0, mai_valor = 0;

        while (true) {
            num = Integer
                    .parseInt(JOptionPane.showInputDialog(null,
                            "Digite um numero", "Numero",
                            JOptionPane.QUESTION_MESSAGE));
            if (num >= 0) {
                cont++;
                if (num > mai_valor) {
                    mai_valor = num;
                }
                if (num < men_valor) {
                    men_valor = num;
                }

            } else {
                break;
            }

        }

        System.out.println("A quantidade de numeros digitados Ã© " + cont);
        System.out.println("O maior valor digitado foi: " + mai_valor);
        System.out.println("O menor valor digitado foi: " + men_valor);
    }

}
